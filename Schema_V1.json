{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "#/definitions/root",
  "title": "Analysis Schema Objects",
  "description": "yt Analysis Schema for Descriptive Scientific Analysis",
  "type": "object",
  "definitions": {
      "DataSet": {
        "description": "the data file to load",
        "type:": "object",
        "properties": {
             "filename": {
                "description": "the file name and path to the file",
                "type": "string"
          }
        },
        "required": ["filename"]
    },
    "SlicePlot": {
      "description": "A slice plot!",
      "type": "object",
      "properties": {
        "data": {
          "type": "array",
          "items": {
          "$ref": "#/definitions/DataSet"}
          },
        "fields": {
          "description": "which fields do you want to add",
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
            },
          "weighted_field": {
            "type": "string"
          },
          "axes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "center": {
            "type":"string"
            },
          "widths": {
            "type": "string"
          }
          }
        }
      },

  "properties": {
     "DomainContext": {
        "description": "natural science domain to work in",
        "type": "string",
        "enum": [
          "Astrophysics", "Geophysics", "Weather/Climate", "NeuroImaging", "Ocean"
        ]
    },
   
    "Visualization": {
      "description": "an object to visualize the data",
      "type": "object",
      "properties": {
        "plot": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/SlicePlot"
            }
         }
        }
      }
  },
  "required": ["DomainContext"]
}

