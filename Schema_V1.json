{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "#/definitions/root",
  "title": "Analysis Schema Objects",
  "description": "yt Analysis Schema for Descriptive Scientific Analysis",
  "type": "object",
  "definitions": {
      "Comments": {
        "description": "a comment section for work",
        "type": "string"
      },
      "DataSet": {
        "description": "the data file to load",
        "type:": "object",
        "properties": {
             "filename": {
                "description": "the file name and path to the file",
                "type": "string"
          }
        },
        "required": ["filename"]
    },
    "Plot": {
      "description": "A plot!",
      "type": "object",
      "properties": {
        "data": {"$ref": "#/definitions/DataSet"},
        "fields": {
          "description": "which fields do you want to add",
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
            },
          "weighted_field": {
            "type": "string"
          },
          "axes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "center": {
            "type":"string"
            },
          "widths": {
            "type": "string"
          },
          "comments": {"$ref": "#/definitions/Dataset"}
          },
          "required": ["data", "axes", "fields"]
          }
        },

  "properties": {
     "DomainContext": {
        "description": "natural science domain to work in",
        "type": "string",
        "enum": [
          "Astrophysics", "Geophysics", "Weather/Climate", "NeuroImaging", "Ocean"
        ]
    },
   
    "Visualization": {
      "description": "an object to visualize the data",
      "type": "object",
      "properties": {
        "plot": {"$ref": "#/definitions/Plot"}
         }
        }
  },
  "required": ["DomainContext"]
}

